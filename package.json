{
  "name": "workflow-ca",
  "version": "0.0.7",
  "description": "Workflow Course Assignment",
  "type": "module",
  "scripts": {
    "build": "sass src/scss:dist/css",
    "watch": "sass src/scss:dist/css --watch",
    "start": "live-server",
    "dev": "npm-run-all --parallel  watch start",
    "test": "npm run test-unit && npm run test-e2e-cli",
    "test-unit": "jest",
    "test-e2e": "cypress open",
    "test-e2e-cli": "cypress run",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/runeunhjem/workflow-ca.git"
  },
  "keywords": [
    "CSS",
    "Frameworks",
    "Bootstrap",
    "SCSS",
    "SASS",
    "Workflow",
    "Unit-Test",
    "Jest",
    "e2e-Test",
    "Cypress"
  ],
  "author": "Rune Unhjem <runeunhjem@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/runeunhjem/workflow-ca/issues"
  },
  "homepage": "https://github.com/runeunhjem/workflow-ca#readme",
  "dependencies": {
    "bootstrap": "^5.3.1",
    "bootstrap-icons": "^1.10.5"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "babel-jest": "^29.7.0",
    "cypress": "^13.3.3",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-localstorage-mock": "^2.4.26",
    "lint-staged": "^15.0.2",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "sass": "^1.66.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
